    <servlet>
        <servlet-name>SignupInsert</servlet-name>
        <servlet-class>com.application.controller.SignupInsert</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupInsert</servlet-name>
        <url-pattern>/user/SignupInsert</url-pattern>   <!-- solved: ternyata harus menelusuri foldernya -->
    </servlet-mapping>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.application.controller.SignupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ArtikelController</servlet-name>
        <servlet-class>com.application.controller.ArtikelController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArtikelController</servlet-name>
        <url-pattern>/ArtikelController</url-pattern>
    </servlet-mapping>
